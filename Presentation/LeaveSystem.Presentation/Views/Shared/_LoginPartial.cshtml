@using Microsoft.AspNetCore.Identity
@using LeaveSystem.Presentation.Models

@inject SignInManager<Employee> SignInManager
@inject IEmployeeManager UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Hello @await UserManager.GetEmployeeByUserNameAsync(User.Identity.Name)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
            </li>
        </ul>
    </form>
}
